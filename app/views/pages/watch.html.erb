    <embed src="<%= @product.download_url %>&amp;hl=en_GB&amp;fs=1?color1=0x006699&amp;color2=0x54abd6&amp;border=1" type="application/x-shockwave-flash" allowscriptaccess="always" allowfullscreen="true" width="480" height="385"></embed>
