
<script>
  jQuery(function() {

    jQuery(document).click(function(){
      jQuery('#player').dialog("close");
    });

    jQuery('#player').dialog({
      title: 'Lesson player: (press Esc key to close)',
			resizable: false,
			autoOpen: true,
			show: 'blind',
			height: 430,
			width: 507,
			modal: true,
			draggable: false,
			open: function(event, ui) { jQuery(".ui-dialog-titlebar-close").hide(); }
    });
  });
</script>

<div id="player">
  <object width="480" height="385"><param name="movie" value="<%= @product.download_url %>&amp;hl=en_GB&amp;fs=1"></param>
    <param name="allowFullScreen" value="true"></param>
